<%= form_for @user do |form| %>
  <%= render "errors", target: @user %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Sign up" %>
    <%= link_to "Sign in", :sign_in %>
  </div>
<% end %>
